<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muinv.selfplan">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.muinv.selfplan.AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.muinv.selfplan.view.activity.SelfPlanActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.muinv.selfplan.view.activity.UserListActivity"
            android:label="@string/activity_title_user_list"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.muinv.selfplan.view.activity.UserDetailsActivity"
            android:label="@string/activity_title_user_details"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".view.activity.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".view.activity.CategoryActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
